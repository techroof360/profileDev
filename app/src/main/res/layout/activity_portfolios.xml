<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PortfoliosActivity"
    >
    <include
        android:id="@+id/portfolio_toolbar"
        layout="@layout/all_app_bar_layout"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="vertical"
            >
            <!-- links -->
            <TextView
                android:id="@+id/about_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/about_text"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/project_git_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0sp"
                android:autoLink="web"
                android:text="@string/project_git_link"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textStyle="normal"
                />
            <!-- Developer part-->

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="horizontal"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="3dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:id="@+id/dev_photo"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_marginTop="30dp"
                                android:src="@drawable/about_man"
                                />
                            <TextView
                                android:id="@+id/developed_by"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/developed_by"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16sp"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold|italic"
                                />
                            <TextView
                                android:id="@+id/dev_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/comfortaa"
                                android:text="@string/dev_1"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:layout_marginTop="5dp"
                                />
                            <TextView
                                android:id="@+id/about_dev1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="@string/https_www_microstarx_net"
                                android:textStyle="normal"
                                />
                            <LinearLayout
                                android:id="@+id/linLayout1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:padding="5dp"
                                android:orientation="horizontal"
                                >
                                <Button
                                    android:id="@+id/git_btn"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="7dp"
                                    android:background="@drawable/ic_github"
                                    />
                                <Button
                                    android:id="@+id/insta_btn"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="7dp"
                                    android:background="@drawable/ic_instagram"
                                    />
                                <Button
                                    android:id="@+id/lin_btn"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="7dp"
                                    android:background="@drawable/ic_linkedin"
                                    />
                                <Button
                                    android:id="@+id/tw_btn"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="7dp"
                                    android:background="@drawable/ic_twitter"
                                    />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/username_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:padding="5dp"
                                android:layout_margin="10dp"
                                android:text="@string/developer_dugout"
                                android:textSize="25sp"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="3dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:id="@+id/dev_photo2"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_marginTop="30dp"
                                android:src="@drawable/web_master"
                                />
                            <TextView
                                android:id="@+id/developed_by2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/developed_by"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16sp"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold|italic"
                                />
                            <TextView
                                android:id="@+id/dev_name2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/comfortaa"
                                android:text="@string/dev_2"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:layout_marginTop="5dp"
                                />
                            <TextView
                                android:id="@+id/about_dev2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="@string/https_www_microstarx_net"
                                android:textStyle="normal"
                                />
                            <LinearLayout
                                android:id="@+id/linLayout2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:padding="5dp"
                                android:orientation="horizontal"
                                >
                                <Button
                                    android:id="@+id/git_btn2"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="7dp"
                                    android:background="@drawable/ic_github"
                                    />
                                <Button
                                    android:id="@+id/insta_btn2"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="7dp"
                                    android:background="@drawable/ic_instagram"
                                    />
                                <Button
                                    android:id="@+id/lin_btn2"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="7dp"
                                    android:background="@drawable/ic_linkedin"
                                    />
                                <Button
                                    android:id="@+id/tw_btn2"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="7dp"
                                    android:background="@drawable/ic_twitter"
                                    />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/username_txt2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:padding="5dp"
                                android:layout_margin="10dp"
                                android:text="@string/developer_dugout"
                                android:textSize="25sp"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="3dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:id="@+id/dev_photo3"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_marginTop="30dp"
                                android:src="@drawable/about_man"
                                />
                            <TextView
                                android:id="@+id/developed_by3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/developed_by"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16sp"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold|italic"
                                />
                            <TextView
                                android:id="@+id/dev_name3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/comfortaa"
                                android:text="@string/dev_3"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:layout_marginTop="5dp"
                                />
                            <TextView
                                android:id="@+id/about_dev3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="@string/https_www_microstarx_net"
                                android:textStyle="normal"
                                />
                            <LinearLayout
                                android:id="@+id/linLayout3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:padding="5dp"
                                android:orientation="horizontal"
                                >
                                <Button
                                    android:id="@+id/git_btn3"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="7dp"
                                    android:background="@drawable/ic_github"
                                    />
                                <Button
                                    android:id="@+id/insta_btn3"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="7dp"
                                    android:background="@drawable/ic_instagram"
                                    />
                                <Button
                                    android:id="@+id/lin_btn3"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="7dp"
                                    android:background="@drawable/ic_linkedin"
                                    />
                                <Button
                                    android:id="@+id/tw_btn3"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="7dp"
                                    android:background="@drawable/ic_twitter"
                                    />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/username_txt3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:padding="5dp"
                                android:layout_margin="10dp"
                                android:text="@string/developer_dugout"
                                android:textSize="25sp"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Motivational Quote's"
                android:layout_gravity="left"
                android:layout_marginStart="15dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/backward"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/ic_left"
                    />
                <ViewFlipper
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/quotesUpdates"
                    >
                    <TextView
                        android:id="@+id/quote0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/desc_slide1"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:id="@+id/quote1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/desc_slide2"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:id="@+id/quote2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/desc_slide3"
                        android:textSize="20sp"
                        />
                </ViewFlipper>
                <Button
                    android:id="@+id/forward"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/ic_right"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/copyrightText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textSize="16sp"
                android:text=""
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>